# USD RAG - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_RESOURCE_GROUP=your-resource-group
AZURE_STORAGE_ACCOUNT=your-storage-account
AZURE_STORAGE_CONTAINER=your-container
AZURE_SEARCH_SERVICE=your-search-service
AZURE_SEARCH_INDEX=your-search-index
AZURE_SEARCH_API_KEY=your-search-api-key

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-openai-org-id
OPENAI_MODEL=gpt-4

# Azure OpenAI Configuration (alternative to OpenAI)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your-azure-openai-key
AZURE_OPENAI_API_VERSION=2023-12-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# LangChain Configuration
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your-langsmith-api-key
LANGCHAIN_PROJECT=usyd-rag

# Vector Database Configuration
CHROMA_HOST=localhost
CHROMA_PORT=8000
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
WEAVIATE_URL=http://localhost:8080
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Application Configuration
LOG_LEVEL=INFO
MAX_CONCURRENT_REQUESTS=10
REQUEST_DELAY=1
USER_AGENT=USYDRag/1.0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/usydrag
REDIS_URL=redis://localhost:6379

# Web Interface Configuration
STREAMLIT_SERVER_PORT=8501
GRADIO_SERVER_PORT=7860
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Crawling Configuration
MAX_PAGES_PER_DOMAIN=1000
CRAWL_DELAY=1
RESPECT_ROBOTS_TXT=true
MAX_RETRIES=3

# Document Processing
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNK_LENGTH=2000

# Embedding Configuration
EMBEDDING_MODEL=text-embedding-ada-002
EMBEDDING_DIMENSION=1536
BATCH_SIZE=100

# Generation Configuration
TEMPERATURE=0.7
MAX_TOKENS=1000
TOP_P=0.95
